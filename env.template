# Environment Variables Template for BRI Application
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bri_db
POSTGRES_USER=bri_user
POSTGRES_PASSWORD=your_secure_password_here

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=BRI-DataCollector/1.0 by your_username
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# GDELT API Configuration
GDELT_API_URL=https://api.gdeltproject.org/api/v2/doc/doc
GDELT_RATE_LIMIT=1
GDELT_TIMEOUT=30

# Yahoo Finance Configuration
YAHOO_FINANCE_SYMBOLS=^GSPC,^VIX,^DJI,^IXIC
YAHOO_FINANCE_TIMEOUT=30

# Application Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_secret_key_here
HOST=0.0.0.0
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/bri.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring Configuration
MONITORING_ENABLED=True
METRICS_ENABLED=True
HEALTH_CHECK_INTERVAL=30

# Alert Configuration
ALERT_EMAIL_ENABLED=False
ALERT_EMAIL_USERNAME=your_email@example.com
ALERT_EMAIL_PASSWORD=your_email_password
ALERT_EMAIL_TO=admin@example.com,alerts@example.com
ALERT_SMTP_SERVER=smtp.gmail.com
ALERT_SMTP_PORT=587

ALERT_WEBHOOK_ENABLED=False
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_WEBHOOK_HEADERS={"Content-Type": "application/json"}

ALERT_SLACK_ENABLED=False
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_SLACK_CHANNEL=#alerts

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Data Processing
BATCH_SIZE=1000
MAX_WORKERS=4
CHUNK_SIZE=10000

# File Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=json,csv,xlsx

# Security
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Development
DEBUG=False
TESTING=False
DEVELOPMENT=False

# Production
PRODUCTION=True
SSL_DISABLE=False
FORCE_HTTPS=False

# Performance
WORKERS=4
TIMEOUT=120
KEEPALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Monitoring and Observability
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=True
GRAFANA_PORT=3000

# Data Retention
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=90

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# External Services
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRIES=3
EXTERNAL_API_BACKOFF_FACTOR=1

# Feature Flags
FEATURE_REDDIT_DATA=True
FEATURE_GDELT_DATA=True
FEATURE_YAHOO_FINANCE=True
FEATURE_REAL_TIME_ALERTS=True
FEATURE_ADVANCED_ANALYTICS=True

# API Keys (if needed for external services)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
QUANDL_API_KEY=your_quandl_key
FRED_API_KEY=your_fred_key

# Notification Services
NOTIFICATION_EMAIL_ENABLED=False
NOTIFICATION_SLACK_ENABLED=False
NOTIFICATION_WEBHOOK_ENABLED=False

# Data Quality
DATA_QUALITY_THRESHOLD=0.8
DATA_VALIDATION_ENABLED=True
AUTO_CLEANUP_ENABLED=True

# Performance Tuning
ENABLE_COMPRESSION=True
ENABLE_CACHING=True
CACHE_TTL=3600
MEMORY_LIMIT=2G
CPU_LIMIT=2

# Docker Configuration
DOCKER_NETWORK=bri-network
DOCKER_VOLUME_PREFIX=bri_
DOCKER_IMAGE_TAG=latest

# Kubernetes Configuration (if using K8s)
KUBERNETES_NAMESPACE=bri
KUBERNETES_SERVICE_ACCOUNT=bri-service-account
KUBERNETES_CONFIG_MAP=bri-config
KUBERNETES_SECRET=bri-secrets
